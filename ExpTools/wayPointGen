NUMNODES=$1
NUMPOINTS=$2
FILENAME=$3
SPACINGTYPE=$4

echo -e "$NUMPOINTS" > $FILENAME

while (( NUMPOINTS > 0 ))
	do
		echo -n $(( RANDOM % NUMNODES )) >> $FILENAME
		(( NUMPOINTS -- ))
		if (( NUMPOINTS > 0 ))
			then
				if (( SPACINGTYPE == 1 ))
					then
						echo "" >> $FILENAME
					else
						echo -n " " >> $FILENAME
				fi
		fi
	done
