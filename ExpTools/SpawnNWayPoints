MINNNODE=$1
MAXNNODE=$2
NPOINTS=$3
DIR=$4
SEPTYPE=$5
NUMFILES=$6

if [ ! -d $DIR ]
	then
		mkdir $DIR
fi

NNODERANGE=$(( MAXNNODE - MINNNODE ))
INCREMENT=$(( NNODERANGE/NUMFILES ))

NNODE=$MINNNODE

npadding=${#MAXNNODE}
while (( NNODE <= MAXNNODE ))
        do
		wayPointGen $NNODE $NPOINTS ${DIR}/expWPoint$(printf "%0*d\n" $npadding $NNODE)nodes.txt $SEPTYPE
                (( NNODE += INCREMENT ))
        done
