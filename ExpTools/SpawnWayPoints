NNODES=$1
MINNPOINTS=$2
MAXNPOINTS=$3
DIR=$4
SEPTYPE=$5
NUMFILES=$6

if [ ! -d $DIR ]
	then
		mkdir $DIR
fi

INCREMENT=$(( (MAXNPOINTS - MINNPOINTS)/(NUMFILES -1) ))

NPOINTS=$MINNPOINTS

npadding=${#MAXNPOINTS}
while (( NPOINTS <= MAXNPOINTS ))
	do
		wayPointGen $NNODES $NPOINTS ${DIR}/expWPoint$(printf "%0*d\n" $npadding $NPOINTS)waypoints.txt $SEPTYPE
		(( NPOINTS += INCREMENT ))
	done
